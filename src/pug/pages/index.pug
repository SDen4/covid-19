doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Covid-19
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='https://code.highcharts.com/highcharts.js')
    script(src='https://code.highcharts.com/highcharts-3d.js')
    script(src='https://code.highcharts.com/modules/exporting.js')
    script(src='https://code.highcharts.com/modules/export-data.js')
    script(src='https://code.highcharts.com/modules/accessibility.js')
  body
    .container
      section.content.content__left
        h1.title Covid-19 in Russia
        .data
          .wrapper
            .data__day
            //-Сегодня 09 апреля 2020 г.
            .data__common
              .data__common-title Текущие данные за последний день
              .data__common-info
                .data__common__bottom
                  .data__common_subtitle Заболело
                  .data__common__ill
                .data__common__bottom
                  .data__common_subtitle Умерло
                  .data__common__dead
                .data__common__bottom
                  .data__common_subtitle Выздоровело
                  .data__common__recover
            .data__detailed
              .data__detailed-title Общие данные за весь период
              label.data__row
                input.data__input(type="checkbox")
                .data__button(type="button") Заболело
                .data__display.data__display_ill
              label.data__row
                input.data__input(type="checkbox")
                .data__button(type="button") Умерло
                .data__display.data__display_dead
              label.data__row
                input.data__input(type="checkbox")
                .data__button(type="button") Выздоровело
                .data__display.data__display_recover
      section.content.content__right
        .data.graph
          .wrapper
            //-plugin Highcharts
            figure.highcharts-figure
              #container
              #sliders
                .wrapper.wrapper_sliders
                  p Настройки графика
                  .charts_body
                    .charts_td
                      label(for='alpha') X
                      input#alpha(type='range', min='0', max='45', value='15')
                      span#alpha-value.value
                    .charts_td
                      label(for='beta') Y
                      input#beta(type='range', min='-45', max='45', value='15')
                      span#beta-value.value
                    .charts_td
                      label(for='depth') Z
                      input#depth(type='range', min='20', max='100', value='50')
                      span#depth-value.value
        .data.graph_detailed
          .wrapper
            .graph_detailed-notice Источники инофрмации: WHO, Яндекс






